<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/edit_acc_det"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp">

        <ImageView
            android:id="@+id/dpimage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop"
            android:src="@drawable/wall" />

        <TextView
            android:id="@+id/tvFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_toEndOf="@+id/dpimage"
            android:layout_toRightOf="@+id/dpimage"
            android:fadingEdge="horizontal"
            android:singleLine="true"
            android:text="Alia Bhatt"
            android:textAppearance="?android:attr/textAppearanceLarge" />


        <ImageView
            android:id="@+id/trlogo"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignTop="@+id/tvTrestorName"
            android:layout_marginLeft="15dp"
            android:layout_toEndOf="@id/dpimage"
            android:layout_toRightOf="@id/dpimage"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="centerCrop"
            android:src="@drawable/wall" />


        <TextView
            android:id="@+id/tvTrestorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/dpimage"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/trlogo"
            android:maxLines="2"
            android:text="12 Hours ago"
            android:textColor="#a3a3a3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/valintrests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvFullName"
            android:layout_alignParentEnd="true"
            android:padding="2dp"
            android:text="tr 120.01"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/valincurr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/valintrests"
            android:padding="2dp"
            android:text="Rs 15.99"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="16sp" />


    </RelativeLayout>

</RelativeLayout>